<div id="inner-webpage-content-inventory">
    <form>
        <div class="form-group">
            {{!-- <label for="computer-id">Computer Id</label> --}}
            <input type="hidden" class="form-control" id="inventory-id">
        </div>
        <div class="form-group">
            <label for="store-id">Store: </label>
            {{!-- <input type="text" class="form-control" id="store-id" placeholder="Enter Store Id"> --}}
            <select id="store-id">
                <option value=""></option>
                {{#each stores}}
                    <tr>
                        <option value="{{this.store_id}}">{{this.store_id}}. {{this.street_address}} {{this.city}}, {{this.state}} {{this.zipcode}}</option>
                    </tr>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="computer-id">Computer: </label>
            <select id="computer-id">
                <option value=""></option>
                {{#each computers}}
                    <tr>
                        <option value="{{this.computer_id}}">{{this.computer_id}}. {{this.description}}</option>
                    </tr>
                {{/each}}
            </select>
            {{!-- <input type="text" class="form-control" id="computer-id" placeholder="Enter Computer Id"> --}}
        </div>
        {{!-- <div class="form-group">
            <label for="computer-description">Computer Description</label>
            <input type="text" class="form-control" id="computer-description"
                placeholder="Enter description of computer">
        </div>
        <div class="form-group">
            <label for="computer-ram">Computer's RAM</label>
            <input type="number" class="form-control" id="computer-ram" placeholder="Enter amount of ram in computer">
        </div>
        <div class="form-group">
            <label for="computer-hard_drive">Computer's Hard Drive</label>
            <input type="number" class="form-control" id="computer-hard-drive"
                placeholder="Enter amount of hard drive on computer">
        </div>
        <div class="form-group">
            <label for="computer-screen_size">Computer's Screen Size</label>
            <input type="number" class="form-control" id="computer-screen-size"
                placeholder="Enter size of computer's screen">
        </div> --}}
        <div class="form-group">
            <label for="computer-quantity">Quantity</label>
            <input type="number" class="form-control" id="computer-quantity" placeholder="Enter number of computers"
                value=0>
        </div>
        <button type="submit" id="submit-inventory" class="btn btn-primary">Insert into inventory</button>
        <button type="submit" id="update-inventory" class="btn btn-primary">Update inventory</button>
    </form>

    <div class="container">
        <h2>Inventory</h2>
        <table class="table" id="inventory-table">
            <thead>
                <tr>
                    <th>Inventory Id</th>
                    <th>Quantity</th>
                    <th>Store Id</th>
                    <th>Store Address</th>
                    <th>Computer Id</th>
                    <th>Computer Description</th>
                    <th>Edit</th>
                    {{!-- <th>Delete</th> --}}
                </tr>
            </thead>
            <tbody>
                {{#each inventory}}
                <tr>
                    <td>{{this.inventory_id}}</td>
                    <td>{{this.quantity}}</td>
                    <td>{{this.store_id}}</td>
                    <td>{{this.street_address}}</td>
                    <td>{{this.computer_id}}</td>
                    <td>{{this.description}}</td>
                    <td><button type="submit" class="btn btn-primary editInventoryBtn">Edit</button></td>
                    {{!-- <td><button type="submit" class="btn btn-primary deleteInventoryBtn">Delete</button></td> --}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>