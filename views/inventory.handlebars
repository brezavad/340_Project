<form>
    <div class="form-group">
        <label for="store-address">Store Address</label>
        <input type="text" class="form-control" id="store-adress" placeholder="Enter Address of your store">
    </div>
    <div class="form-group">
        <label for="city">City</label>
        <input type="text" class="form-control" id="city" placeholder="Enter city">
    </div>
    <div class="form-group">
        <label for="state">State</label>
        <input type="text" class="form-control" id="city" placeholder="Enter abbreviated state" maxlength=2>
    </div>
    <div class="form-group">
        <label for="computer-description">Computer</label>
        <input type="text" class="form-control" id="computer-description" placeholder="Enter description of computer">
    </div>
    <div class="form-group">
        <label for="computer-ram">Computer</label>
        <input type="number" class="form-control" id="computer-ram" placeholder="Enter amount of ram in computer">
    </div>
    <div class="form-group">
        <label for="computer-hard_drive">Computer's Hard Drive</label>
        <input type="number" class="form-control" id="computer-hard_drive"
            placeholder="Enter amount of hard drive on computer">
    </div>
    <div class="form-group">
        <label for="computer-screen_size">Computer's Screen Size</label>
        <input type="number" class="form-control" id="computer-screen_size"
            placeholder="Enter size of computer's screen">
    </div>
    <div class="form-group">
        <label for="computer-quantity">Computer</label>
        <input type="number" class="form-control" id="computer-quantity" placeholder="Enter number of computers"
            value=0>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div class="container">
    <h2>Store Inventory</h2>
    <p>Store Address</p>
    <table class="table">
        <thead>
            <tr>
                <th>Computer Description</th>
                <th>Computer Ram</th>
                <th>Computer Screen Size</th>
                <th>Quantity</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Computer 1</td>
                <td>8</td>
                <td>32</td>
                <td>3</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        </tbody>
    </table>
</div>