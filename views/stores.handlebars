<div id="inner-webpage-content-inventory">
    <form class="input-form">
        <div class="form-group">
            {{!-- <label for="computer-id">Computer Id</label> --}}
            <input type="hidden" class="form-control" id="store-id">
        </div>
        <div class="form-group">
            <label for="store-address">Store Address</label>
            <input type="text" class="form-control" id="store-address" placeholder="Enter Address of your store">
        </div>
        <div class="form-group">
            <label for="city">City</label>
            <input type="text" class="form-control" id="store-city" placeholder="Enter City of your store">
        </div>
        <div class="form-group">
            <label for="state">State</label>
            <input type="text" class="form-control" id="store-state" placeholder="Enter abbreviated state" maxlength=2>
        </div>
        <div class="form-group">
            <label for="zip">Zip Code</label>
            <input type="text" class="form-control" id="store-zip" placeholder="Enter zip code" maxlength=5>
        </div>
        <button type="submit" id="submit-store" class="btn btn-primary">Insert into stores</button>
    </form>
    <div class="container">
        <h2>Stores</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Store Id</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Zipcode</th>
                </tr>
            </thead>
            <tbody>
                {{#each stores}}
                <tr>
                    <td>{{store_id}}</td>
                    <td>{{street_address}}</td>
                    <td>{{city}}</td>
                    <td>{{state}}</td>
                    <td>{{zipcode}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>