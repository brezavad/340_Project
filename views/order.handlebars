<div id="inner-webpage-content-order">
    <h3>Order Computers Here</h3>
    <hr id="order-hr">
    <div id="order-information">
        <div id="order-information-form">
            <div id="order-form">
                <h4>Order Information</h4>
                <hr>
                <div class="form-group">
                    <label for="customer-email">Customer email (required): </label>
                    <input type="text" class="form-control" id="order-email" placeholder="Enter you email...">
                </div>
                <div class="form-group">
                    <label for="store-info">Store: </label>
                    <select id="store-info"></select>
                </div>
                <div class="form-group">
                    <label for="computer-info">Computer: </label>
                    <select id="computer-info"></select>
                </div>
                <div class="form-group">
                    <label for="quantity">Quantity </label>
                    <input type="number" class="form-control" id="quantity" placeholder="Enter quantity...">
                </div>
                <button type="submit" form="order-form">Place Order</button>
            </div>
            <div id="order-status">
                <h4>Available Inventory</h4>
                <hr id="store-information-hr">
                <h4 id="store-information-title"><u>Store Information</u></h4>
                <table id="store-table">
                    <tr>
                        <th>Address</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Zip Code</th>
                    </tr>
                    <tr>
                        <td>111 Main St</td>
                        <td>Miami</td>
                        <td>FL</td>
                        <td>12345</td>
                    </tr>
                </table>
                {{!-- <hr id="table-separator-hr"> --}}
                <hr id="computer-information-hr">
                <h4 id="computer-information-title"><u>Computer Information</u></h4>
                <table id="computer-table">
                    <tr>
                        <th>Description</th>
                        <th>RAM</th>
                        <th>Hard Drive</th>
                        <th>Screen Size</th>
                        <th>Quantity</th>
                    </tr>
                    <tr>
                        <td>Intel</td>
                        <td>32</td>
                        <td>500</td>
                        <td>21</td>
                        <td>20</td>
                    </tr>
                </table>
            </div>
        </div>    
    </div>
</div>
